{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & Imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Build Quality */
    "noEmitOnError": true,

    /* Source Maps (optional but useful) */
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
